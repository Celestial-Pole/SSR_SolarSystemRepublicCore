	<ThingDef ParentName="SSR_UAVBase">
		<defName>SSR_EF_MedicaUAV</defName>
		<label>医疗无人机</label>
		<description>医疗无人机</description>
		<graphicData>
			<texPath>Things/Apparel/EF_MedicaUAV/EF_MedicaUAV</texPath>
			<shaderType>CutoutComplex</shaderType>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<costList>
			<Steel>50</Steel>
			<ComponentIndustrial>1</ComponentIndustrial>
		</costList>
		<statBases>
			<MaxHitPoints>500</MaxHitPoints>
			<WorkToMake>3500</WorkToMake>
			<Mass>0</Mass>
			<EquipDelay>0.3</EquipDelay>
		</statBases>
		<tickerType>Normal</tickerType>
		<apparel>
			<countsAsClothingForNudity>false</countsAsClothingForNudity>
			<bodyPartGroups>
				<li>Neck</li>
			</bodyPartGroups>
			<useWornGraphicMask>true</useWornGraphicMask>
			<canBeDesiredForIdeo>false</canBeDesiredForIdeo>
			<layers>
				<li>Overhead</li>
			</layers>
		</apparel>
		<recipeMaker>
			<researchPrerequisite>SSRBasicMedicine</researchPrerequisite>
			<skillRequirements>
				<Crafting>7</Crafting>
			</skillRequirements>
		</recipeMaker>
		<equippedStatOffsets>
			<!-- 治疗速度 -->
			<MedicalTendSpeed>0.25</MedicalTendSpeed>
			<!-- 治疗质量 -->
			<MedicalTendQuality>0.25</MedicalTendQuality>
			<!-- 手术速度 -->
			<MedicalOperationSpeed>0.25</MedicalOperationSpeed>
			<!-- 手术成功率 -->
			<MedicalSurgerySuccessChance>0.20</MedicalSurgerySuccessChance>
		</equippedStatOffsets>
		<comps>
			<li Class="FS_SSR.TCP_FloatingDrone_Sin">
				<wornGraphics>
					<texPath>Things/Apparel/EF_MedicaUAV/EF_MedicaUAV</texPath>
					<graphicClass>Graphic_multi</graphicClass>
					<drawSize>1.5</drawSize>
					<drawOffset>(0, 0, 0)</drawOffset>
				</wornGraphics>
				<speedZ>0.0002</speedZ>
				<distanceZ>0.03</distanceZ>
				<cycleX>0.0002</cycleX>
				<distanceX>0.03</distanceX>
			</li>
		</comps>
	</ThingDef>

