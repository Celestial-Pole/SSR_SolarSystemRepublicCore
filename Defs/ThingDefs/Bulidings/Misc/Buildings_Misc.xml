	<ThingDef ParentName="BuildingBase">
		<defName>SSR_VerticalDrillingRig</defName>
		<label>垂直钻井机</label>
		<description>垂直钻井机是一种用于钻探深井的重型设备，具有高塔架和旋转钻头，能够钻探出深层的地热资源。</description>
		<tickerType>Normal</tickerType>
		<graphicData>
			<texPath>Things/Building/Misc/VerticalDrillingRig/VerticalDrillingRig_Base</texPath>
			<graphicClass>Graphic_Single</graphicClass>
			<drawSize>(4,4)</drawSize>
		</graphicData>
		<uiIconPath>Things/Building/Misc/VerticalDrillingRig/VerticalDrillingRig</uiIconPath>
		<size>(4,4)</size>
		<drawerType>MapMeshAndRealTime</drawerType>
		<castEdgeShadows>false</castEdgeShadows>
		<rotatable>false</rotatable>
		<altitudeLayer>Building</altitudeLayer>
		<passability>PassThroughOnly</passability>
		<pathCost>50</pathCost>
		<fillPercent>1</fillPercent>
		<designationCategory>SSR_DesignationCategory</designationCategory>
		<minifiedDef>MinifiedThing</minifiedDef>
		<canOverlapZones>false</canOverlapZones>
		<terrainAffordanceNeeded>Medium</terrainAffordanceNeeded>
		<thingCategories>
			<li>BuildingsMisc</li>
		</thingCategories>
		<statBases>
			<MaxHitPoints>200</MaxHitPoints>
			<WorkToBuild>10</WorkToBuild>
			<Mass>10</Mass>
			<Flammability>0.5</Flammability>
		</statBases>
		<costList>
			<Steel>10</Steel>
		</costList>
		<constructionSkillPrerequisite>8</constructionSkillPrerequisite>
		<building>
			<soundAmbient>VerticalDrillingRig_WarmupSustained</soundAmbient>
			<destroySound>BuildingDestroyed_Metal_Medium</destroySound>
		</building>
		<comps>
			<li Class="CompProperties_Power">
				<compClass>CompPowerTrader</compClass>
				<shortCircuitInRain>true</shortCircuitInRain>
				<basePowerConsumption>1000</basePowerConsumption>
			</li>
			<li>
				<compClass>FS_SSR.TC_SolarFlareLocalShield</compClass>
			</li>
			<li Class="FS_SSR.TCP_SteamSpringMaker">
				<interval>54000</interval>
			</li>
			<li Class="FS_SSR.Generic.TCP_DrawOverlay">
				<overlay>
					<texPath>Things/Building/Misc/VerticalDrillingRig/VerticalDrillingRig_Top</texPath>
					<graphicClass>Graphic_Single</graphicClass>
					<drawSize>(12,12)</drawSize>
					<drawOffset>(-0.1,0,4.45)</drawOffset>
				</overlay>
			</li>
		</comps>
		<researchPrerequisites>
			<li>SSRVerticalDrillingTechnology</li>
		</researchPrerequisites>
		<modExtensions>
			<li Class="FS_SSR.UI.Ext_DesignationCategoryInner">
				<!-- SSR_DesignationCategory分类的必须带此ext注明子分类 -->
				<innerCategory>SSR_DesignationInnerCategory_Misc</innerCategory>
			</li>
		</modExtensions>
	</ThingDef>

