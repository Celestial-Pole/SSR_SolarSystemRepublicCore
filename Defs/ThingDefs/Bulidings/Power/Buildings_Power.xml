<?xml version="1.0" encoding="utf-8"?>
<Defs>

  <ThingDef ParentName="BuildingBase">
    <defName>SSR_NuclearFusionReactor</defName>
    <label>核聚变反应堆</label>
    <description>核聚变反应堆</description>
    <thingClass>Building</thingClass>
    <drawerType>MapMeshAndRealTime</drawerType>
    <graphicData>
      <texPath>Things/Building/Power/NuclearFusionReactor/NuclearFusionReactor</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>(5,5)</drawSize>
      <shadowData>
        <volume>(1.93,1,1.69)</volume>
        <offset>(-0.03,0,-0.1)</offset>
      </shadowData>
    </graphicData>
    <altitudeLayer>Building</altitudeLayer>
    <passability>PassThroughOnly</passability>
    <pathCost>50</pathCost>
    <blockWind>true</blockWind>
    <fillPercent>1.0</fillPercent>
    <rotatable>false</rotatable>
    <statBases>
      <MaxHitPoints>5000</MaxHitPoints>
      <WorkToBuild>25000</WorkToBuild>
      <Flammability>0</Flammability>
      <Beauty>10</Beauty>
    </statBases>
    <tickerType>Normal</tickerType>
    <canOverlapZones>false</canOverlapZones>
    <size>(5,5)</size>
    <building>
      <destroySound>BuildingDestroyed_Metal_Medium</destroySound>
    </building>
    <costList>
      <Steel>100</Steel>
      <ComponentIndustrial>3</ComponentIndustrial>
    </costList>
    <comps>
      <li Class="FS_SSR.TCP_IgnitedPowerTrader">
        <basePowerConsumption>20000</basePowerConsumption>
        <IgnitedPowerOutput>230000</IgnitedPowerOutput>
        <transmitsPower>true</transmitsPower>
      </li>
      <!--<li
      Class="CompProperties_Refuelable">
        <fuelConsumptionRate>4.5</fuelConsumptionRate>
        <fuelCapacity>30.0</fuelCapacity>
        <fuelFilter>
          <thingDefs>
            <li>Chemfuel</li>
          </thingDefs>
        </fuelFilter>
        <showAllowAutoRefuelToggle>true</showAllowAutoRefuelToggle>
      </li>
      <li Class="CompProperties_Power">
        <compClass>CompPowerPlant</compClass>
        <basePowerConsumption>-250000</basePowerConsumption>
        <transmitsPower>true</transmitsPower>
      </li>-->
      <li Class="CompProperties_Glower">
        <glowRadius>6</glowRadius>
        <glowColor>(80,112,180,0)</glowColor>
      </li>
      <li Class="CompProperties_HeatPusher">
        <compClass>CompHeatPusherPowered</compClass>
        <heatPerSecond>6</heatPerSecond>
      </li>
      <li Class="CompProperties_Breakdownable" />
      <li Class="CompProperties_Explosive">
        <explosiveRadius>0</explosiveRadius>
        <explosiveExpandPerFuel>0.95</explosiveExpandPerFuel>
        <explosiveDamageType>Flame</explosiveDamageType>
        <destroyThingOnExplosionSize>2</destroyThingOnExplosionSize>
        <startWickHitPointsPercent>0.333</startWickHitPointsPercent>
        <preExplosionSpawnThingDef>Filth_Fuel</preExplosionSpawnThingDef>
        <preExplosionSpawnChance>1</preExplosionSpawnChance>
        <wickTicks>70~150</wickTicks>
      </li>
    </comps>
    <terrainAffordanceNeeded>Heavy</terrainAffordanceNeeded>
    <designationCategory>Power</designationCategory>
    <designationHotKey>Misc4</designationHotKey>
    <constructEffect>ConstructMetal</constructEffect>
    <researchPrerequisites>
      <li>SSRControlledNuclearFusion</li>
    </researchPrerequisites>
    <constructionSkillPrerequisite>12</constructionSkillPrerequisite>
  </ThingDef>

  <ThingDef ParentName="BuildingBase">
    <defName>SSR_WirelessPowerBroadcaster</defName>
    <label>无线输电塔</label>
    <description>无线输电塔</description>
    <thingClass>Building</thingClass>
    <tickerType>Long</tickerType>
    <graphicData>
      <texPath>Things/Building/Power/WirelessPowerBroadcaster/WirelessPowerBroadcaster-Base</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>(5,5)</drawSize>
      <shadowData>
        <volume>(0.6, 1.0, 1.6)</volume>
        <offset>(-0.1,0,-0.08)</offset>
      </shadowData>
    </graphicData>
    <uiIconPath>Things/Building/Power/WirelessPowerBroadcaster/WirelessPowerBroadcaster</uiIconPath>
    <size>(5,5)</size>
    <rotatable>false</rotatable>
    <altitudeLayer>Building</altitudeLayer>
    <passability>PassThroughOnly</passability>
    <drawerType>MapMeshAndRealTime</drawerType>
    <pathCost>50</pathCost>
    <castEdgeShadows>false</castEdgeShadows>
    <fillPercent>1</fillPercent>
    <designationCategory>Power</designationCategory>
    <canOverlapZones>false</canOverlapZones>
    <terrainAffordanceNeeded>Medium</terrainAffordanceNeeded>
    <statBases>
      <MaxHitPoints>2000</MaxHitPoints>
      <WorkToBuild>15000</WorkToBuild>
      <Flammability>0</Flammability>
    </statBases>
    <costList>
      <Steel>10</Steel>
    </costList>
    <constructionSkillPrerequisite>12</constructionSkillPrerequisite>
    <building>
      <destroySound>BuildingDestroyed_Metal_Medium</destroySound>
    </building>
    <comps>
      <li>
        <compClass>FS_SSR.TC_SolarFlareLocalShield</compClass>
      </li>
      <li Class="CompProperties_Power">
        <compClass>FS_SSR.TC_LocalWirelessPowerBroadcast</compClass>
        <transmitsPower>true</transmitsPower>
        <basePowerConsumption>-20000</basePowerConsumption>
      </li>
      <li Class="FS_SSR.TCP_GlobalPowerBroadcast" />
      <li Class="FS_SSR.Generic.TCP_DrawOverlay">
        <overlay>
          <texPath>Things/Building/Power/WirelessPowerBroadcaster/WirelessPowerBroadcaster-Top</texPath>
          <graphicClass>Graphic_Single</graphicClass>
          <drawSize>(7,7)</drawSize>
          <drawOffset>(0,0,2.25)</drawOffset>
          <shadowData>
            <volume>(0.6, 1.0, 1.6)</volume>
            <offset>(-0.1,0,-0.08)</offset>
          </shadowData>
        </overlay>
      </li>
    </comps>
    <placeWorkers>
      <li>FS_SSR.Generic.PW_MapUniqueBuilding</li>
    </placeWorkers>
  </ThingDef>

  <ThingDef ParentName="BuildingBase">
